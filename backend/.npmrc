;;;;
; the following options override the default values
;;;;

# NPM Security Best Practices Configuration - Root Workspace
# Disable lifecycle scripts to prevent malicious code execution
ignore-scripts=true

# Enable provenance statements for published packages
provenance=true

# Pin exact dependency versions (no ^ or ~ operators)
save-exact=true

# Set save prefix to empty to force exact versions
save-prefix=''

# Disable funding messages
fund=false

# Set audit level to moderate
audit-level=moderate

# Use lockfile for reproducible builds
package-lock=true

# Workspace configuration
install-strategy=hoisted
legacy-peer-deps=false

;;;;
; the following options can be used for stricter control, best to consult npm docs
; https://docs.npmjs.com/cli/v11/using-npm/config to see if they are applicable to your use case
;;;;

; before= 
; engine-strict=true
; prefer-offline=true
; sign-git-commit=true
; sign-git-tag=true
; strict-peer-deps=true