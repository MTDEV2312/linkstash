# NPM Security Best Practices Configuration
# Disable lifecycle scripts to prevent malicious code execution
ignore-scripts=true

# Enable provenance statements for published packages
provenance=true

# Pin exact dependency versions (no ^ or ~ operators)
save-exact=true

# Set save prefix to empty to force exact versions
save-prefix=''

# Disable automatic execution of lifecycle scripts during installation
# This prevents potentially malicious postinstall scripts from running
fund=false

# Only install packages that have been published for at least some time
# This helps avoid newly published malicious packages
audit-level=moderate

# Use lockfile for reproducible builds
package-lock=true